#!/usr/bin/env node

const argv = require('yargs')
  .env('PLUGIN')
  .usage('$0', 'Lint a buildkite plugin')
  .option('name', {
    describe: 'Name of the plugin',
    type: 'string'
  })
  .option('path', {
    describe: 'Path to the plugin',
    type: 'string'
  })
  .option('readme', {
    describe: 'Readme filename',
    type: 'string',
    default: 'README.md'
  })
  .demandOption(['name', 'path'])
  .help()
  .version(false)
  .argv

Promise.all([
  require('../lib/linters/plugin-yaml-linter')(argv),
  require('../lib/linters/example-linter')(argv),
  require('../lib/linters/readme-version-number-linter')(argv)
]).catch(() => {
  process.exit(1)
})