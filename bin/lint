#!/usr/bin/env node

const argv = require('yargs')
  .env('PLUGIN')
  .usage('$0', 'Lint a buildkite plugin')
  .option('name', {
    describe: 'Name of the plugin',
    type: 'string'
  })
  .option('path', {
    describe: 'Path to the plugin',
    type: 'string'
  })
  .option('readme', {
    describe: 'Readme filename',
    type: 'string',
    default: 'README.md'
  })
  .check(yargs => {
    if (yargs && yargs.name && yargs.name.endsWith('-buildkite-plugin')) {
      throw new Error(`--name can not end with -buildkite-plugin. Did you mean ${yargs.name.replace(/-buildkite-plugin$/, '')}?`)
    }
    return true
  })
  .demandOption(['name', 'path'])
  .help()
  .version(false)
  .argv

const tap = require('tap')

Promise.all([
  require('../lib/linters/plugin-yaml-linter')(argv, tap),
  require('../lib/linters/example-linter')(argv, tap),
  require('../lib/linters/readme-version-number-linter')(argv, tap)
  ])
  .catch((err) => {
    tap.threw(err)
  })
  .then(() => {
    tap.end()
  })
